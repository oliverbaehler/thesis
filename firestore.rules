rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Rules for the collections collection
    match /collections/{collectionId} {
      allow read: if true; // Allow anyone to read collections
      allow create: if request.auth != null; // Allow only authenticated users to create collections
      allow update, delete: if request.auth != null && request.auth.uid == request.resource.data.createdBy; // Allow only the creator to update or delete their collections
    }

    // Rules for the collections collection
    match /products/{productId} {
      allow read: if true; 
      allow create: if request.auth != null; 
      allow update, delete: if request.auth != null && request.auth.uid == request.resource.data.createdBy; 
    }

    match /qr-codes/{productId} {
      allow read: if true; 
      allow create: if request.auth != null; 
      allow update, delete: if request.auth != null && request.auth.uid == request.resource.data.createdBy; 
    }

    // Rules for the users collection
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId; // Allow each user to read and write their own user document
    }
  }
}